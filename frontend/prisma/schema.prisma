// Prisma Schema for Bwaincell Frontend
// Connects directly to PostgreSQL database
// Matches backend Sequelize models

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id           Int       @id @default(autoincrement())
  googleId     String    @unique @map("google_id")
  email        String    @unique
  name         String
  picture      String?
  discordId    String    @map("discord_id")
  guildId      String    @map("guild_id")
  refreshToken String?   @map("refresh_token")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

// List model with JSON items
model List {
  id        Int      @id @default(autoincrement())
  name      String
  items     Json     @default("[]")
  userId    String   @map("user_id")
  guildId   String   @map("guild_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("lists")
  @@index([guildId])
}

// Task model
model Task {
  id          Int       @id @default(autoincrement())
  description String
  dueDate     DateTime? @map("due_date")
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now()) @map("created_at")
  completedAt DateTime? @map("completed_at")
  userId      String    @map("user_id")
  guildId     String    @map("guild_id")

  @@map("tasks")
  @@index([guildId])
  @@index([completed])
}

// Note model with tags array
model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  tags      String[] @default([])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  userId    String   @map("user_id")
  guildId   String   @map("guild_id")

  @@map("notes")
  @@index([guildId])
}

// Reminder model
model Reminder {
  id          Int       @id @default(autoincrement())
  message     String
  time        String
  frequency   String    // 'once' | 'daily' | 'weekly'
  dayOfWeek   Int?      @map("day_of_week")
  channelId   String    @map("channel_id")
  userId      String    @map("user_id")
  guildId     String    @map("guild_id")
  active      Boolean   @default(true)
  nextTrigger DateTime? @map("next_trigger")

  @@map("reminders")
  @@index([guildId])
  @@index([active])
}

// Budget model
model Budget {
  id          Int      @id @default(autoincrement())
  type        String   // 'expense' | 'income'
  category    String?
  amount      Decimal  @db.Decimal(10, 2)
  description String?  @db.Text
  date        DateTime @default(now())
  userId      String   @map("user_id")
  guildId     String   @map("guild_id")

  @@map("budgets")
  @@index([guildId])
  @@index([type])
  @@index([date])
}

// Schedule model
model Schedule {
  id          Int      @id @default(autoincrement())
  event       String
  date        String   // DATEONLY stored as string (YYYY-MM-DD)
  time        String   // TIME stored as string (HH:MM:SS)
  description String?  @db.Text
  userId      String   @map("user_id")
  guildId     String   @map("guild_id")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("schedules")
  @@index([guildId])
  @@index([date])
}
